{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:8080",
    "distDir": "../build"
  },
  "package": {
    "productName": "Meow App",
    "version": "0.1.1"
  },
  "tauri": {
    "bundle": {
      "active": true,
      "identifier": "com.meownocode.app",
      "targets": ["msi", "nsis"],
      "icon": [
        "icons/icon.ico",
        "icons/icon.png"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Meow App",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 640,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true
      }
    ],
    "allowlist": {
      "window": {
        "create": true,
        "close": true,
        "setFocus": true,
        "setAlwaysOnTop": true,
        "setDecorations": true,
        "startDragging": true,
        "setPosition": true,
        "minimize": true,
        "maximize": true,
        "unmaximize": true
      }
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}
